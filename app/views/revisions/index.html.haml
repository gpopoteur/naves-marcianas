%h1 Todas las Revisiones
%table.table.table-striped
  %thead
    %tr
      %th Revisior
      %th Aeronave
      %th Fecha
      %th
  %tbody
    - @revisions.each do |revision|
      %tr
        %td= revision.revisior
        %td= revision.aeronave.nombre
        %td= l(revision.created_at, :format => :short)
        %td
          = link_to 'Show', revision
          = link_to 'Edit', edit_revision_path(revision)
          = link_to 'Destroy', revision, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Revision', new_revision_path, class: 'btn btn-primary'
