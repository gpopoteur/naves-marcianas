%h1 Todos los Movimientos
%table.table.table-striped
  %thead
    %tr
      %th Tipo movimiento
      %th Pasajero
      %th Aeronave
      %th
      %th
      %th
  %tbody
    - @movimientos.each do |movimiento|
      %tr
        %td= movimiento.tipo_movimiento
        %td= movimiento.pasajero.nombre
        %td= movimiento.aeronave_id
        %td
          = link_to 'Show', movimiento
          = link_to 'Edit', edit_movimiento_path(movimiento)
          = link_to 'Destroy', movimiento, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Movimiento', new_movimiento_path, class: 'btn btn-primary'
