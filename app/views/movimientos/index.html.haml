%h1 Todos los Movimientos

%table.table.table-striped
  %thead
    %tr
      %th Tipo movimiento
      %th Pasajero
      %th Aeronave
      %th Date
      %th
  %tbody
    - @movimientos.each do |movimiento|
      %tr
        %td= raw(movimiento.tipo_movimiento == TipoMovimiento::entrada ? "<span class='label label-success'>Entrada</span>" : "<span class='label label-danger'>Salida</span>")
        %td= movimiento.pasajero != nil ? movimiento.pasajero.nombre : ""
        %td= movimiento.aeronave != nil ? movimiento.aeronave.nombre : ""
        %td= l(movimiento.created_at, :format => :short)
        %td
          = link_to 'Show', movimiento, class: "btn btn-info"
          = link_to 'Edit', edit_movimiento_path(movimiento)
          = link_to 'Destroy', movimiento, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Movimiento', new_movimiento_path, class: 'btn btn-primary'