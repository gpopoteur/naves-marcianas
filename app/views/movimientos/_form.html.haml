= form_for(@movimiento) do |f|
  - if @movimiento.errors.any?
    #error_explanation
      %h2
        = pluralize(@movimiento.errors.count, "error")
        prohibited this movimiento from being saved:
      %ul
        - @movimiento.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :tipo_movimiento
    %br/
    = f.number_field :tipo_movimiento
  .field
    = f.label :pasajero_id
    %br/
    = f.collection_select :pasajero_id, Pasajero.all, :id, :nombre
  .field
    = f.label :aeronave_id
    %br/
    = f.collection_select :aeronave_id, Aeronave.all, :id, :nombre
  .actions
    = f.submit
