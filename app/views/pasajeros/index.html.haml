%h1 Listing pasajeros
%table
  %thead
    %tr
      %th Nombre
      %th
      %th
      %th
  %tbody
    - @pasajeros.each do |pasajero|
      %tr
        %td= pasajero.nombre
        %td= link_to 'Show', pasajero
        %td= link_to 'Edit', edit_pasajero_path(pasajero)
        %td= link_to 'Destroy', pasajero, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Pasajero', new_pasajero_path
