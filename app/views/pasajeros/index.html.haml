%h1 Todos los Pasajeros
%table.table.table-striped
  %thead
    %tr
      %th Nombre
      %th
  %tbody
    - @pasajeros.each do |pasajero|
      %tr
        %td= pasajero != nil ? pasajero.nombre : ""
        %td
          = link_to 'Show', pasajero, class: 'btn btn-info'
          = link_to 'Edit', edit_pasajero_path(pasajero), class: "btn btn-warning"
          = link_to 'Destroy', pasajero, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
%br/
= link_to 'New Pasajero', new_pasajero_path, class: 'btn btn-primary'
