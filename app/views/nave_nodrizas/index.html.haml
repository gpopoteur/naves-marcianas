%h1 Todas las Naves Nodrizas
%table.table.table-striped
  %thead
    %tr
      %th Nombre
      %th
  %tbody
    - @nave_nodrizas.each do |nave_nodriza|
      %tr
        %td= nave_nodriza.nombre
        %td
          = link_to 'Show', nave_nodriza
          = link_to 'Edit', edit_nave_nodriza_path(nave_nodriza)
          = link_to 'Destroy', nave_nodriza, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Nave Nodriza', new_nave_nodriza_path, class: 'btn btn-primary'
