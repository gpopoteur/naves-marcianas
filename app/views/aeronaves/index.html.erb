<div class="row">
<div class="col-md-12">
<h1>Todas las Aeronaves</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Max marcianos</th>
      <th>Nave origen</th>
      <th>Nave destino</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @aeronaves.each do |aeronafe| %>
      <tr>
        <td><%= aeronafe.nombre %></td>
        <td><%= aeronafe.max_marcianos %></td>
        <td><%= aeronafe.origen.nombre %></td>
        <td><%= aeronafe.destino.nombre %></td>
        <td><%= link_to 'Show', aeronafe, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_aeronafe_path(aeronafe), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', aeronafe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Aeronave', new_aeronafe_path, class: "btn btn-primary" %>
</div>
</div>
